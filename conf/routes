# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                            controllers.Application.index()

# User REST options
GET     /login                       controllers.Application.login()
GET     /signup                      controllers.Application.signup()
POST    /createUser                  controllers.Application.createUser()
POST    /authenticate                controllers.Application.authenticate()
GET     /logout                      controllers.Application.logout()
GET     /home                        controllers.Application.home()
GET     /profile                     controllers.Application.profile()

# Widget REST options
GET     /api/widgets                 controllers.WidgetController.index()
POST    /api/widget                  controllers.WidgetController.createWidget()
GET     /api/widget/:id              controllers.WidgetController.getWidget(id: Integer)
DELETE  /api/widget/:id              controllers.WidgetController.removeWidget(id: Integer)
PUT     /api/widget/:id/:status      controllers.WidgetController.updateWidget(id: Integer, status)

GET     /showModal                   controllers.WidgetController.showWidgetModal()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)
